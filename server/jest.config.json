{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": ["**/**/*.test.ts"],
  "verbose": true,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "testTimeout": 30000
}
